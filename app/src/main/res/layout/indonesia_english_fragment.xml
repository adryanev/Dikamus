<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.indonesia_english.IndonesiaEnglishFragment">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ie_constraint_search">
            <EditText
                android:padding="8dp"
                android:id="@+id/ie_edit_text"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:background="@android:color/white"
                android:hint="Cari"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:inputType="textUri|textNoSuggestions"
                android:imeOptions="actionSearch"/>

            <ImageButton
                android:id="@+id/ei_imageButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ie_edit_text"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_round_search_24px" />
        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ie_rv"
            tools:listitem="@layout/item_pencarian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:layout_anchor="@id/ie_constraint_search"
            app:layout_anchorGravity="bottom">


        </android.support.v7.widget.RecyclerView>

    </android.support.design.widget.CoordinatorLayout>


</FrameLayout>